pipeline {
    agent any
    stages {
        stage('Prepare build  agent') {
            agent {
                docker {
                    image 'openjdk:17.0.1-jdk-slim'
                    args '-v /var/run/docker.sock:/var/run/docker.sock -v /Users/alperkurtoglu/.m2:/root/.m2 -u root:root'
                    reuseNode true
                }
            }
            stages {
                stage('[Backend] Clean') {
                    steps {
                        sh './mvnw clean'
                    }
                }
                stage('[Backend] Compile') {
                    steps {
                        sh './mvnw compile'
                    }
                }
            }
        }
    }
}