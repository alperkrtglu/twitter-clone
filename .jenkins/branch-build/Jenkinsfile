pipeline {
    agent none
    stages {
        stage('Prepare build agent') {
            agent {
                docker {
                    image 'openjdk:17.0.1-jdk-slim'
                    args '-v /var/run/docker.sock:/var/run/docker.sock -v /Users/alperkurtoglu/.m2:/root/.m2 -u root:root'
                    reuseNode true
                }
            }
            stages {
                stage('[Backend] Clean') {
                    steps {
                        sh './mvnw clean'
                    }
                }
                stage('[Backend] Compile') {
                    steps {
                        sh './mvnw compile'
                    }
                }
            }
        }
        stage('Docker operations') {
            agent any
            steps {
                stage('Check Docker CLI') {
                    steps {
                        sh 'docker version'
                        sh 'which docker || echo Docker CLI not found'
                    }
                }
                stage('Build and Push Docker Image') {
                    steps {
                        script {
                            docker.withRegistry('http://localhost:9092/repository/twitter-repository', 'nexus-credentials') {
                                def application = docker.build("twitter-clone:${env.BUILD_ID}")
                                application.push()
                            }
                        }
                    }
                }
            }
        }
    }
}
